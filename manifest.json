{
  "name" : "JSTVRemote",
  "version" : "1.0.1",
  "description" : "Work as tvremote plugin",

  "browser_action": {
    "default_title": "Send on tv",
    "default_icon": "sandwich-16.png",
    "default_popup": "infobar.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "http://*/",
    "https://*/"
  ],
  "icons" : {
    "16" : "sandwich-16.png",
    "48" : "sandwich-48.png",
    "128" : "sandwich-128.png"
  },
  "manifest_version": 2
}
